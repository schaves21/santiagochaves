      </thead>
      <tbody>
        {{#each products}}
        <tr>
          <td>{{_id}}</td>
          <td>{{title}}</td>
          <td>{{code}}</td>
          <td>{{price}}</td>
          <td>{{stock}}</td>
          <td>{{category}}</td>
          <td>
  
            <button class="btn btn-success bi bi-plus" data-toggle="modal" data-target="#crearProductoModal"></button>
            <button class="btn btn-info bi bi-pencil" data-toggle="modal" data-target="#editarProductoModal"></button>
            <button class="btn btn-danger bi bi-trash" data-toggle="modal" data-target="#eliminarProductoModal"></button>
          

          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>

    
