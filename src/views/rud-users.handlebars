<div class="container crudProducts mt-4">
  <div class="d-flex flex-row-reverse mt-1 mb-1">
    <form action="/rud-users/inactive-users?_method=DELETE" method="POST">
        <input type="hidden" name="_method" value="DELETE">
        <button type="submit" class="btn btn-danger">
          <i class="bi bi-trash mr-2"></i> 
          Delete Inactive User
        </button>
    </form>
  </div>
  <h1 class="mb-3">Role = user check required documents</h1>
  <table class="table text-white">
      <thead>
          <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Age</th>
            <th>Role</th>
            <th>Last Connection</th>
            <th>Acciones</th>
          </tr>
      </thead>
      <tbody>
          {{#each users}}
          <tr>
              <td>{{this._id}}</td>
              <td>{{this.firstName}}</td>
              <td>{{this.lastName}}</td>
              <td>{{this.email}}</td>
              <td>{{this.age}}</td>
              <td>{{this.rol}}</td>
              <td>{{this.last_connection}}</td>
              <td>
                <form action="/rud-users/{{this._id}}" method="POST">
                  <input type="hidden" name="_method" value="POST">
                  <button class="btn btn-info bi bi-pencil ms-3" data-toggle="tooltip" title="Update Role" type="submit"> Update Role</button>
                </form>
              </td>
          </tr>
          {{/each}}
      </tbody>
  </table>
</div>


    
    
    