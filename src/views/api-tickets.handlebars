<div class="container mt-4">
  <div class="row">
    <div class="col-md-6 mb-3">
      <form class="cartsForm mt-3 text-white w-100 h-100">
        <a href="/api/tickets" class="btn btn-outline-light btn-lg my-5 w-100">API All Tickets</a>
      </form>
    </div>

    <div class="col-md-6 mb-3">
      <form method="GET" id="ticketForm" class="cartsForm mt-3 text-white w-100 h-100">
        <h4 class="mt-2 mb-4 text-center">API Ticket By ID</h4>
        <input type="text" id="tid" placeholder="Ticket Id" class="form-control form-control-lg">
        <div class="text-center mt-3"> 
          <button class="btn btn-success btn-lg mb-3" type="submit">List</button>
        </div>
      </form>
    </div>

    <div class="col-md-6 mb-3">
      <form method="POST" action="/api/carts/:cid/purchase" id="addTicketForm" class="cartsForm mt-3 text-white w-100 h-100">     
        <h4 class="mt-2 mb-4 text-center">API Create Ticket</h4> 
        <div class="form-group mb-3">
          <input type="text" id="cid" name="cid" placeholder="Cart Id" class="form-control form-control-lg">
        </div>
        <div class="text-center">
          <button type="submit" class="btn btn-success btn-lg mb-3 mx-auto" onclick="submitAddTicketForm()">Create Ticket</button>
        </div>
      </form>
    </div>

</div>

<script>
  
  document.getElementById('ticketForm').addEventListener('submit', function (e) {
    e.preventDefault(); 
    const tid = document.getElementById('tid').value;
    const url = `/api/tickets/${tid}`;
    window.location.href = url;
  });
  
  function submitAddTicketForm() {
    let cid = document.getElementById('cid').value;
    document.getElementById('addTicketForm').action = `/api/carts/${cid}/purchase`;
  }

</script>



