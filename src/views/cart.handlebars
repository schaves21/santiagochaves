<div class="container mt-4">
  <h1 class="mb-4 text-white">Shopping Cart</h1>
  <div class="row">  
    {{#if cart.length}}
    {{#each cart}}
    <div class="col-md-4 mb-3">
        <p class="card-text cartId text-white">{{this._id}}</p>
        <div class="card">
            <img src="{{this.thumbnail}}" class="card-img-top" alt="imagen">
            <div class="card-body">
                <h5 class="card-title">{{this.title}}</h5>
                <p class="card-text">Price: ${{this.price}}</p>
                <p class="card-text">Quantity: {{this.quantity}}</p>
            </div>
        </div>
    </div>
    {{/each}}
    <div class="col-md-12 text-center mt-4">
      <button class="btn btn-success buy-button">Buy Now</button>
    </div>
    {{else}}
    <div class="col-md-12 text-center text-white">
        <p>No products in the cart</p>
    </div>
    {{/if}}
  </div>
</div>

<script>
document.addEventListener("DOMContentLoaded", function () {
  const buyButtons = document.querySelectorAll(".buy-button");
  const cid = document.querySelector(".cartId").textContent;

  buyButtons.forEach(function(button) {
    button.addEventListener("click", function(event) {
      buyNow(cid);
    });
  });

  function buyNow(cid) {
  
    fetch(`/cart/${cid}/purchase`, {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json'
      }
    })
    .then(response => {
      if (response.ok) {
        Toastify({
          text: "Thanks for your purchase",
          duration: 3000,
          newWindow: true,
          close: true,
          gravity: "top",
          position: "right",
          stopOnFocus: true,
          style: {
            background: "linear-gradient(to right, #00b09b, #96c93d)",
          },
        }).showToast();
        localStorage.removeItem('cartData');
        localStorage.removeItem('cartCount');
        setTimeout(() => {
          window.location.href = "/purchases";
        }, 3000);
      } else {
        console.error('Purchase error');
      }
    })
    .catch(error => {
      console.error('Server error:', error);
    });
  }
});
</script>



