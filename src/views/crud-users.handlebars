<div class="container crudProducts mt-4">
  <h1>CRUD Users</h1>
  <table class="table text-white">
      <thead>
          <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Age</th>
            <th>Role</th>
            <th>Acciones</th>
          </tr>
      </thead>
      <tbody>
          {{#each users}}
          <tr>
              <td>{{this._id}}</td>
              <td>{{this.firstName}}</td>
              <td>{{this.lastName}}</td>
              <td>{{this.email}}</td>
              <td>{{this.age}}</td>
              <td>{{this.rol}}</td>
              <td>
                <form action="/crud-users/{{this._id}}" method="POST">
                  <input type="hidden" name="_method" value="POST">
                  <button class="btn btn-info bi bi-pencil mb-2" type="submit"></button>
                </form>
                <button class="btn btn-danger bi bi-trash mb-2" data-toggle="modal" data-target="#eliminarModal{{this._id}}"> </button>
              </td>
          </tr>
          {{/each}}
      </tbody>
  </table>

</div>

<!-- Modal de confirmación de eliminación -->
{{#each users}}
<div class="modal fade" id="eliminarModal{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="eliminarModalLabel{{this._id}}" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="eliminarModalLabel{{this._id}}">Delete User</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>¿Are you sure you want to delete the User "{{this.firstName}}"?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <form action="/crud-users/delete/{{this._id}}?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>
{{/each}}


    
    
    