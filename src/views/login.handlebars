<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <form action="/api/sessions/login" method="post">
        <div class="text-center text-white mb-3">
          <p>Sign in with:</p>
          <button type="button" class="btn btn-link btn-floating mx-1">
            <a href="/api/sessions/github"><i class="bi bi-github"></i></a>
          </button>
        </div>

        <div class="form-floating mb-3">
          <input
            type="email"
            class="form-control border-0 border-bottom border-dark"
            id="inputEmailRegister"
            name="email"
            placeholder="Enter email"
          />
          <label for="input-passwordLogin"><i class="bi bi-envelope-at me-1"></i>Email</label>
        </div>

        <div class="form-floating">
          <input
            type="password"
            class="form-control border-0 border-bottom border-dark"
            id="inputPasswordLogin"
            name="password"
            placeholder="Password"
          />
          <label for="input-passwordLogin"><i class="bi bi-eye-slash me-1"></i>Password</label>
        </div>
								
        <button type="submit" class="btn btn-primary btn-block mb-4 w-100">Sign in</button>

        <div class="form-check w-100 d-flex justify-content-center align-items-center text-white mb-3">
          <input type="checkbox" class="form-check-input" id="remember" checked>
          <label class="form-check-label" for="remember">Remember me</label>
        </div>

        <div class="mt-3 text-center text-white mb-3">
            <a href="/recover-mail">Forgot password?</a>
        </div>

        <div class="mt-3 text-center text-white mb-3">
            <p>Not a member?<a href="/register"> Register</a></p>
        </div>

      </form>
    </div>
  </div>
</div>